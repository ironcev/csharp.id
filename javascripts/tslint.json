{
    "defaultSeverity": "warning",
    "extends": [
        "tslint-config-airbnb"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ],
        "semicolon": [
            true,
            "never"
        ],
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "max-classes-per-file": [
            false
        ],
        "interface-name": [
            false
        ],
        "member-ordering": [
            true,
            {
                "order": "fields-first"
            }
        ],
        "member-access": [
            true,
            "no-public"
        ],
        "curly": [
            true,
            "as-needed"
        ],
        "no-console": [
            false
        ],
        "adjacent-overload-signatures": true,
        "deprecation": true,
        "indent": [
            true
        ],
        "no-shadowed-variable": false,
        "only-arrow-functions": [
            true,
            "allow-declarations",
            "allow-named-functions"
        ],
        "align": [
            false
        ],
        "max-line-length": [
            true, 120
        ],
        "one-variable-per-declaration": [
            false
        ],
        "radix": false
    },
    "rulesDirectory": []
}